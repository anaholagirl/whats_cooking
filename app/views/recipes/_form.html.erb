<%= form_for (@recipe) do |f| %>
  <div class='form-group'>
    <%= f.label :name %>
    <%= f.text_field :name, placeholder: "Enter Recipe Name"%>
  </div>
  <div class='form-group'>
    <%= f.label :ingredients %>
    <%= f.text_area :ingredients, placeholder: "Use commas to separate ingredients" %>
  </div>
  <div class='form-group'>
    <%= f.label :instructions %>
    <%= f.text_area :instructions %>
  </div>
  <%= f.submit(:class => 'btn btn-success btn-lg') %>
<% end %>


