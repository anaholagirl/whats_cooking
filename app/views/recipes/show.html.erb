
<% content_for(:title, "Show | Recipes") %>

<div class='container'>
  <h1>Recipe: <%= @recipe.name %></h1>

  <% ingredients = @recipe.ingredients.split(',') %>
  <% ingredients.each do |ingredient| %>
    <li><%= ingredient %></li>
  <% end %>

  <p><%= @recipe.instructions %></p>
  <br></br>


  <p><%= link_to "Tag this Recipe to a Category", new_recipe_tag_path(@recipe), :class => 'btn btn-success' %></p>


  <p><%= button_to 'Make a Favorite', recipe_favorites_path(@recipe), :class => 'btn btn-primary' %></p>

  <p><%= link_to "Homepage", root_path, :class => 'btn btn-success' %></p>

    <% if current_user != nil && current_user.id == @recipe.user_id %>
  <p><%= link_to "Edit Recipe", edit_recipe_path, :class => 'btn btn-success' %></p>
  <% end %>
</div>
