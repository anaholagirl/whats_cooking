<% content_for(:title, "Edit | Group") %>

<h1>Edit this Recipe Category: </h1>

<%= render('layouts/errors', :object => @group) %>

<%= form_for [@user, @group] do |f| %>
  <div class='form-group'>
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>
<%= f.submit(:class => 'btn btn-success') %>
<% end %>
