<%= form_for (@recipe) do |f| %>
  <div class='form-group'>
    <p><%= f.label :name %></p>
    <%= f.text_area :name, placeholder: "Enter Recipe Name(No capitals)"%>
  </div>
  <div class='form-group'>
    <%= f.label :ingredients %>
    <%= f.text_area :ingredients, placeholder: "Use commas to separate ingredients(No capitals)" %>
  </div>
  <div class='form-group'>
    <%= f.label :instructions %>
    <%= f.text_area :instructions %>
  </div>
  <%= f.submit(:class => 'btn btn-success btn-lg') %>
<% end %>


