<h1>Categories and the Recipes under them: </h1>

<% current_user.groups.each do |group| %>
  <ul>
    <li><%= group.name %></li>
      <% group.recipes.each do |recipe| %>
        <ul>
          <li><%= link_to recipe.name, recipe_path(recipe) %></li>
        </ul>
      <% end %>
  </ul>
<% end %>

<p><%= link_to "Profile Page", user_path(current_user), :class => 'btn btn-success' %></p>

<p><%= link_to "Homepage", root_path, :class => 'btn btn-success' %></p>
