<%= form_for (@recipe) do |f| %>
  <div class='form-group'>
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>
  <div class='form-group'>
    <%= f.label :ingredients %>
    <%= f.text_area :ingredients %>
  </div>
  <div class='form-group'>
    <%= f.label :instructions %>
    <%= f.text_area :instructions %>
  </div>
  <%= f.submit(:class => 'btn btn-primary btn-lg') %>
<% end %>


