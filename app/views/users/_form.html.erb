<%= form_for(@user) do |f| %>
  <%= f.label :name %>
  <p><%= f.text_field :name, placeholder: "Enter Your Name" %></p>
  <%= f.label :email %>
  <p><%= f.text_field :email, placeholder: "Enter Your Email Address"%></p>
  <%= f.label :password %>
  <p><%= f.password_field :password, placeholder: "Must be at least four characters" %></p>
  <%= f.label :password_confirmation %>
  <p><%= f.password_field :password_confirmation %></p>
  <p><%= f.submit "Create Account", class: 'btn btn-success btn-lg' %></p>
<% end %>
