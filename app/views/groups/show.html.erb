<% content_for(:title, "Show | Groups") %>

<h1>Category: <%= @group.name %></h1>



<%= link_to "Edit Category", edit_user_group_path, :class => 'btn btn-success' %>

<% if current_user && @group.user_id == current_user.id %>
<p><%= link_to "Remove Category", user_group_path(@user, @group), data: { confirm: 'Are you sure you want to delete this category?',
  method: 'delete'} %></p>
<% end %>

