<% content_for(:title, "Edit | Recipes") %>

<h1>Edit your Recipe: </h1>

<%= render('layouts/errors', :object => @recipe) %>

<%= render 'form' %>

<% if current_user && @recipe.user == current_user.id %>
<p><%= link_to "Remove Recipe", recipes_path(@recipe), data: { confirm: 'Are you sure you want to delete this recipe?',
  method: 'delete'} %></p>
  <% end %>
