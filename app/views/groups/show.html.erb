<% content_for(:title, "Show | Groups") %>

<h1>Category: <%= @group.name %></h1>

<% @group.recipes.each do |recipe| %>
  <ul>
    <li><%= link_to recipe.name, recipe_path(recipe) %></li>
  </ul>
<% end %>

<p><%= link_to "Edit Category", edit_user_group_path, :class => 'btn btn-primary' %></p>

<% if current_user && @group.user_id == current_user.id %>
<p><%= link_to "Remove Category", user_group_path(@user, @group), :class => 'btn btn-warning', data: { confirm: 'Are you sure you want to delete this category?',
  method: 'delete'} %></p>
<% end %>

<p><%= link_to "Homepage", root_path, :class => 'btn btn-success' %></p>

