<%= form_for(@user) do |f| %>
  <%= f.label :name %>
  <p><%= f.text_field :name %></p>
  <%= f.label :email %>
  <p><%= f.text_field :email %></p>
  <%= f.label :password %>
  <p><%= f.password_field :password %></p>
  <%= f.label :password_confirmation %>
  <p><%= f.password_field :password_confirmation %></p>
  <p><%= f.submit "Create Account", class: 'btn btn-primary btn-lg' %></p>
<% end %>
