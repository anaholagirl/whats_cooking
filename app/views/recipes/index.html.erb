<% content_for(:title, "Home | Recipes") %>

<div class='container'>
  <div class="row">
    <div class='col-md-4 all_recipes_show' style='column-count:2'>
      <div id="recipes_show_search", remote: true>
      <h1 class="all-recipe-header">All Recipes</h1>
      <% Recipe.all.sort.each do |recipe| %>
        <ul>
          <% if recipe.photos.any? %>
            <div class='recipe_thumb' >
              <li><% recipe.photos.each do |photo| %>
                <%= image_tag(photo.image.url(:thumb)) %>
              <% end %>
            <%= link_to recipe.name, recipe_path(recipe) %></li>
            </div>
            <% else %>
            <li><%= link_to recipe.name, recipe_path(recipe) %></li>
          <% end %>
        </ul>
      <% end %>
      </div>
    </div>

    <div class="col-md-4" id="recipe_search">
      <div class="search_for_recipes">
        <h1>Search Recipes by Ingredient</h1>
        <%= form_tag recipes_path, method: :get, remote: true do %>
          <p><%= text_field_tag :search, params[:search] %></p>
          <p><%= submit_tag "Search for Recipes", name: nil, class: "btn btn-success btn-lg" %></p>
        <% end %>
      </div>
    </div>
  </div>
</div>

